<body class="font-sans bg-blue-300 w-full h-full">

    <!-- Navbar -->
    <nav class="bg-gray-600 p-3 max-w-[1024px] text-white grid grid-cols-2 ">

        <!-- Home Button -->
        <a href="#" class="text-3xl font-bold self-center">Dispute Resolution Council</a>

        <!-- Search Input -->
        <div class="place-self-end ">
            <form action="GET" method="GET">

             <input type="text" placeholder="Search" class=" p-2 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500">
             <button type="submit"><i class="fa fa-search"></i>Search</button>
            </form>
        
        </div>


    </nav>

    <div class="container flex  ">
        <div class="sidebar grid grid-row-3 ml-4">
            <ul class="text-yellow-100 text-center font-bold text-lg p-4 ">
                <li class=""><a href="">Home</a></li>

            </ul>
            <ul class="text-yellow-100 text-center font-bold text-lg p-4  ">
                <li class=""><a href="">Cases</a></li>
            </ul>
            <!-- <ul class="text-yellow-100 text-center font-bold text-lg p-4 border  ">
                <li class=""><a href="">New case</a></li>
            </ul> -->
            <ul class="text-yellow-100  text-center font-bold text-lg p-4   ">
                <li class=""><a href="/views/sign-in">Log-Out</a></li>
            </ul>
        </div>
        <div class="dform font-bold">
            <form action="/portal" method="POST" class="form flex flex-col gap-2">
                 Name <input type="text" name="dpn" id="txt" placeholder="     Dispute Person Name">
                 Father Name <input type="text" name="dfn" id="txt" placeholder="       Dispute Person Father Name">
                 Contact Number <input type="text" name="dcn" id="txt" placeholder="      If / any">
                 Address <input type="text" name="da" id="txt" placeholder="    Dispute Person Address">
                 Case Detail  <label for="address" class="block text-gray-700 text-sm font-bold mb-2"></label>
                 <textarea id="txt1" name="address" class="border rounded w-full py-2 px-3" required></textarea>
                 <label for="dispute-type" class="block text-gray-700 text-sm font-bold mb-2">Dispute Type</label>
                 <select id="dispute-type" name="disputeType" class="border rounded w-30 py-2 px-3" required>
                     <option value="Money/Loan">Money/Loan</option>
                     <option value="Home">Home</option>
                     <option value="Land">Land</option>
                     <option value="Vehicle">Vehicle</option>
                     <option value="Assault">Assault</option>
                     <option value="Others">Others</option>
                 </select>
                 <button type="submit" class="registerbtn"> Register Case </button>
                 
                
            </form>
            
        </div>
    </div>
    

