.dform{
  border-radius: 30px;
  background-color: rgb(212, 209, 209);
  margin-top: 20px;
  margin-left: 300px;
  display: flex;
  padding: 10px;
  width: 750px;
  height: 700px;
  justify-content: center;
  align-items: center;
}

.registerbtn{
  background-color: rgb(44, 101, 151);
  color: white;
  border-radius: 50px;
