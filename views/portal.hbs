    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dispute Resolution Council</title>
    <!-- Add your CSS styles or link to an external stylesheet here -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  </head>
  
  <body class="bg-gray-100">
    <!-- views/home.hbs -->




    
  
    <header class="bg-blue-500 text-white text-center py-4">
      <h1 class="text-3xl font-bold">Dispute Resolution Council</h1>
    </header>
  
    <section class="container mx-auto my-8 p-8 bg-white shadow-lg rounded-lg">
      <h2 class="text-2xl font-bold mb-4">File a Case</h2>
  
      <form action="/file-case" method="POST" class="mb-4">
        <div class="mb-4">
          <label for="description" class="block text-sm font-medium text-gray-700">Case Description</label>
          <textarea id="description" name="description" rows="3" class="mt-1 p-2 border rounded-md w-full" required></textarea>
        </div>
  
        <div class="mb-4">
          <label for="defendantName" class="block text-sm font-medium text-gray-700">Defendant's Name</label>
          <input type="text" id="defendantName" name="defendantName" class="mt-1 p-2 border rounded-md w-full" required>
        </div>
  
        <div class="mb-4">
          <label for="defendantAddress" class="block text-sm font-medium text-gray-700">Defendant's Address</label>
          <input type="text" id="defendantAddress" name="defendantAddress" class="mt-1 p-2 border rounded-md w-full" required>
        </div>
  
        <button type="submit" class="mt-4 px-4 py-2 bg-blue-500 text-white rounded-md">Submit Case</button>
     
      </form>
      
  
      <!-- Display existing cases, if any -->
  
    </section>
  
    <footer class="bg-blue-500 text-white text-center py-4">
      <!-- Add any footer content or links here -->
    </footer>
  
  </body>
  
  </html>
  
 




